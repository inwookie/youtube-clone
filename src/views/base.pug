doctype html 
html(lang="en")
    head    
        title #{pageTitle} | Clone 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            if testUser.loggedIn 
                small Hello #{testUser.username}
            nav
                ul
                    if testUser.loggedIn 
                        li
                            a(href="/login") Log Out 
                    else
                        li
                            a(href="/login") Login 
            h1=pageTitle
        main
            block content
    include partials/footer.pug